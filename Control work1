// Задача: Написать программу, которая из имеющегося массива строк формирует новый массив из строк, длина которых меньше, либо равна 3 символам. 
// Первоначальный массив можно ввести с клавиатуры, либо задать на старте выполнения алгоритма. 
// При решении не рекомендуется пользоваться коллекциями, лучше обойтись исключительно массивами.

Примеры:
["Hello", "2", "world", ":-"] → ["2", ":-"]
["1234", "1567", "-2", "computer science"] → ["-2"]
["Russia", "Denmark", "Kazan"] → []

using System;

class Program
{
    static void Main()
    {
        // Исходные массивы строк
        string[] array1 = { "Hello", "2", "world", ":-" };
        string[] array2 = { "1234", "1567", "-2", "computer science" };
        string[] array3 = { "Russia", "Denmark", "Kazan" };

        // Формирование новых массивов
        string[] result1 = FilterStrings(array1);
        string[] result2 = FilterStrings(array2);
        string[] result3 = FilterStrings(array3);

        // Вывод результатов
        Console.WriteLine("Исходный массив: [" + string.Join(", ", array1) + "]");
        Console.WriteLine("Новый массив: [" + string.Join(", ", result1) + "]\n");

        Console.WriteLine("Исходный массив: [" + string.Join(", ", array2) + "]");
        Console.WriteLine("Новый массив: [" + string.Join(", ", result2) + "]\n");

        Console.WriteLine("Исходный массив: [" + string.Join(", ", array3) + "]");
        Console.WriteLine("Новый массив: [" + string.Join(", ", result3) + "]");
    }

    static string[] FilterStrings(string[] original)
    {
        // Подсчет количества строк, удовлетворяющих условию
        int count = 0;
        foreach (string str in original)
        {
            if (str.Length <= 3)
            {
                count++;
            }
        }

        // Создание нового массива нужного размера
        string[] result = new string[count];
        int index = 0;

        // Заполнение нового массива подходящими строками
        foreach (string str in original)
        {
            if (str.Length <= 3)
            {
                result[index] = str;
                index++;
            }
        }

        return result;
    }
}